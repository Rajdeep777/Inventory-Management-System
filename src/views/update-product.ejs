<h1 class="mt-5 mb-4 header text-center shadow-lg">Update Product</h1>

<% if(errorMessage){ %>
    <div class="alert alert-danger" role="alert">
        <%= errorMessage %> 
    </div>  
<% } %>

<form action="/update-product"  method="post" class="bg-white shadow-lg p-3">
    <input type="hidden" class="form-control bg-light" id="id" name="id" value="<%= product.id %>">

    <div class="mb-3">
        <label for="name" class="form-label">Product Name</label>
        <input type="text" class="form-control bg-light" id="name" name="name" value="<%= product.name %>">
    </div>
    <div class="mb-3">
        <label for="desc" class="form-label">Product Description</label>
        <textarea class="form-control bg-light" id="desc" name="desc" rows="3" required ><%= product.desc %></textarea>
    </div>
    <div class="mb-3">
        <label for="price" class="form-label">Product Price</label>
        <input type="number" class="form-control bg-light" id="price" name="price" value="<%= product.price %>" required>
    </div>
    <div class="mb-3">
        <label for="imageUrl" class="form-label">Image URL</label>
        <input type="text" class="form-control bg-light" id="imageUrl" name="imageUrl" value="<%= product.imageUrl %>" required>
    </div>
    <div class="text-center">
        <button type="submit" class="btn">Update Product</button>
    </div>
</form>